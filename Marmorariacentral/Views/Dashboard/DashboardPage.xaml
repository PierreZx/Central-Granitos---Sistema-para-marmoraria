<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Marmorariacentral.Views.Dashboard.DashboardPage"
             Title="Dashboard"
             BackgroundColor="#F2F2F7">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <Label Text="Visão Geral" FontSize="28" FontAttributes="Bold" TextColor="#333" Margin="0,10" />

            <Border StrokeShape="RoundRectangle 15" StrokeThickness="0" BackgroundColor="#8B1A1A" Padding="20">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Saldo em Caixa" TextColor="#E0E0E0" FontSize="14" />
                    <Label Text="{Binding ValorCaixa}" TextColor="White" FontSize="32" FontAttributes="Bold" />
                </VerticalStackLayout>
            </Border>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                
                <Border Grid.Column="0" StrokeShape="RoundRectangle 15" StrokeThickness="0" BackgroundColor="White" Padding="15">
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,5" Opacity="0.05" Radius="10"/>
                    </Border.Shadow>
                    <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                        <Label Text="Estoque" TextColor="#777" FontSize="12" HorizontalOptions="Center" />
                        <Label Text="{Binding TotalChapas}" FontSize="24" FontAttributes="Bold" TextColor="#8B1A1A" HorizontalOptions="Center" />
                        <Label Text="chapas" FontSize="10" TextColor="#AAA" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>

                <Border Grid.Column="1" StrokeShape="RoundRectangle 15" StrokeThickness="0" BackgroundColor="White" Padding="15">
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,5" Opacity="0.05" Radius="10"/>
                    </Border.Shadow>
                    <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                        <Label Text="Orçamentos" TextColor="#777" FontSize="12" HorizontalOptions="Center" />
                        <Label Text="{Binding TotalOrcamentos}" FontSize="24" FontAttributes="Bold" TextColor="#8B1A1A" HorizontalOptions="Center" />
                        <Label Text="ativos" FontSize="10" TextColor="#AAA" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <Grid ColumnDefinitions="*,Auto">
    
                <Label Text="Visão Geral"
                    FontSize="28"
                    FontAttributes="Bold"
                    TextColor="#333"
                    Margin="0,10" />

                <Border Grid.Column="1"
                        BackgroundColor="{Binding WifiStatusColor}"
                        WidthRequest="16"
                        HeightRequest="16"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 50"
                        VerticalOptions="Center"/>
            </Grid>

            <Label Text="Atividade Recente" FontSize="18" FontAttributes="Bold" Margin="0,10,0,0" />
            <Border StrokeShape="RoundRectangle 15" StrokeThickness="0" BackgroundColor="White" HeightRequest="200" Padding="20">
                <Label Text="Nenhuma atividade recente encontrada." VerticalOptions="Center" HorizontalOptions="Center" TextColor="#CCC" />
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>