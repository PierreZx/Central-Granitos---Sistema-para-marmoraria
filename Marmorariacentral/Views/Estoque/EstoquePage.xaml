<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Marmorariacentral.Models"
             xmlns:viewmodels="clr-namespace:Marmorariacentral.ViewModels"
             x:Class="Marmorariacentral.Views.Estoque.EstoquePage"
             Title="Estoque de Chapas"
             BackgroundColor="#F2F2F7">

    <Grid RowDefinitions="80, *">
        
        <Grid Grid.Row="0" BackgroundColor="White" Padding="20,0">
            <Label Text="Inventário" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   VerticalOptions="Center" 
                   TextColor="#333"/>
            
            <Button Text="+ Nova Chapa" 
                    Command="{Binding AbrirCadastroCommand}"
                    BackgroundColor="#8B1A1A" 
                    TextColor="White" 
                    CornerRadius="10"
                    HeightRequest="45"
                    WidthRequest="180"
                    HorizontalOptions="End"
                    VerticalOptions="Center"
                    ZIndex="10"
                    InputTransparent="False"/>
        </Grid>

        <RefreshView Grid.Row="1" Command="{Binding CarregarEstoqueCommand}">
            <CollectionView ItemsSource="{Binding ItensEstoque}" Margin="15">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:EstoqueItem">
                        <Frame Margin="0,0,0,10" Padding="15" HasShadow="False" BorderColor="#DDD" BackgroundColor="White">
                            <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">
                                <VerticalStackLayout Grid.Column="0" Spacing="4">
                                    <Label Text="{Binding NomeChapa}" FontAttributes="Bold" FontSize="18" TextColor="#333"/>
                                    <Label Text="{Binding MetroQuadradoTotal, StringFormat='{0:N2} m²'}" TextColor="#8B1A1A" FontAttributes="Bold"/>
                                </VerticalStackLayout>
                                
                                <HorizontalStackLayout Grid.Column="1" Spacing="10" VerticalOptions="Center">
                                    <Button Text="E" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#EEE" 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:EstoqueViewModel}}, Path=EditarItemCommand}"
                                            CommandParameter="{Binding .}"/>
                                    <Button Text="X" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#FFF0F0" TextColor="Red"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:EstoqueViewModel}}, Path=ExcluirItemCommand}"
                                            CommandParameter="{Binding .}"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>