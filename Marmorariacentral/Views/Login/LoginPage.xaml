<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Marmorariacentral.Views.Login.LoginPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#F5F5F7">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,60,30,30" VerticalOptions="Center">
            
            <Image Source="logo_central.png"
                   HeightRequest="180"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20" />

            <Border StrokeShape="RoundRectangle 20"
                    StrokeThickness="0"
                    BackgroundColor="White"
                    Padding="25"
                    MaximumWidthRequest="450">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,10" Radius="20" Opacity="0.05" />
                </Border.Shadow>

                <VerticalStackLayout Spacing="15">
                    <Label Text="Bem-vindo à Central"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#333"
                           HorizontalOptions="Center" />
                    
                    <Label Text="Faça login para gerenciar sua marmoraria"
                           FontSize="14"
                           TextColor="#777"
                           HorizontalOptions="Center"
                           Margin="0,0,0,10" />

                    <Frame CornerRadius="10" Padding="10,2" BorderColor="#EEE" BackgroundColor="#FAFAFA">
                        <Entry x:Name="EmailEntry"
                               Placeholder="E-mail"
                               Keyboard="Email"
                               TextColor="#333"
                               PlaceholderColor="#AAA" />
                    </Frame>

                    <Frame CornerRadius="10" Padding="10,2" BorderColor="#EEE" BackgroundColor="#FAFAFA">
                        <Entry x:Name="PasswordEntry"
                               Placeholder="Senha"
                               IsPassword="True"
                               TextColor="#333"
                               PlaceholderColor="#AAA" />
                    </Frame>

                    <Button Text="ACESSAR SISTEMA"
                            Clicked="OnLoginClicked"
                            BackgroundColor="#8B1A1A"
                            TextColor="White"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            HeightRequest="50"
                            Margin="0,10,0,0" />
                </VerticalStackLayout>
            </Border>

            <Label Text="© 2026 Central Granitos"
                   FontSize="12"
                   TextColor="#BBB"
                   HorizontalOptions="Center"
                   Margin="0,20,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>